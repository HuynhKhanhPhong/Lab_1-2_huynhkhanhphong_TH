<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MENU CHÍNH"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"/>

    <Button
        android:id="@+id/btn_bai_tap_cu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bài Cũ: Máy tính &amp; Xúc xắc"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/btn_goi_nhan_tin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bài Cũ: Gọi điện &amp; Nhắn tin"
        android:layout_marginBottom="10dp"/>

    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#ccc" android:layout_marginVertical="15dp"/>

    <Button
        android:id="@+id/btn_bai_tap_1_moi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bài Mới 1 &amp; 3: Random Màu/Icon &amp; Call"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/btn_bai_tap_2_moi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bài Mới 2: Custom ProgressBar"
        android:layout_marginBottom="10dp"/>
    <Button
        android:id="@+id/btn_bai_tap_5_moi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bài Mới 5: Màn hình Discover"
        android:layout_marginBottom="10dp"/>

</LinearLayout>